<h1>Posts</h1>
<% @posts.each do |post| %>
  <p>Subject: <%= post.title %></p>
  <!-- <p><%= post.tags %></p> -->
  <p>Body: <%= post.content %></p>
  <p>Sound Attachment: <%= post.sound_file_name %></p>
  <!-- <p><%= post.public %></p> -->
  <p>Uploaded By: <%= post.user.try :user_name %></p>
<% end %>